            <tr>
                <th>Id</th>
                <th>Product_name</th>
                <th>Size</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
{% for product in sale.purchasedProducts  %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.productName }}</td>
                <td>{{ product.size  }}</td>
                <td>${{ product.price }}</td>
                <td>{{ product.qty  }}</td>
                <td>${{ product.price * product.qty  }}</td>

                
          <tr>
      
{% endfor %}
  </tbody>
    </table>

{% endblock %}

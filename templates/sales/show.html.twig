{% extends 'user_base.html.twig' %}

{% block title %}Sales{% endblock %}

{% block body %}
    <h1>Sales</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sale.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ sale.createdAt ? sale.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TotalAmount</th>
                <td>${{ sale.totalAmount }}</td>
            </tr>
        </tbody>
    </table>


                  <table id="dtBasicExample" class="table text-nowrap mb-0 align-middle">

